endif

test_verge_LDADD += $(LIBBITCOIN_SERVER) $(LIBBITCOIN_COMMON) $(LIBBITCOIN_UTIL) \
					 $(LIBLEVELDB) $(LIBMEMENV)  \
					 $(BOOST_LIBS) $(BOOST_UNIT_TEST_FRAMEWORK_LIB)


if HAVE_SSE2
test_verge_LDADD += $(LIBBITCOIN_SSE2)
endif

